	<authorEmail>optikool@yahoo.com</authorEmail>
	<authorUrl>www.optikool.com</authorUrl>
	<version>1.0</version>
	<description>Allows Searching of the XGallery Component.</description>
	<files>
		<filename plugin="xgallery">xgallery.php</filename>
		<filename>index.html</filename>
	</files>
	<languages>
		<language tag="en-GB">languages/en-GB.plg_search_xgallery.ini</language>
		<language tag="en-GB">languages/en-GB.plg_search_xgallery.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="search_limit" type="text" size="5" default="50" label="PLG_SEARCH_XGALLERY_SEARCH_LIMIT" description="PLG_SEARCH_XGALLERY_SEARCH_LIMIT_DESC" />
			</fieldset>
		</fields>
	</config>
</extension>
